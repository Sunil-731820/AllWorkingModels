package com.java.jsp;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class LoginDAOPinCode {
	
	Connection connection;
	PreparedStatement pst;
	
	public int loginUsingPinCode(String userName , int pinCode) throws ClassNotFoundException, SQLException {
		connection = ConnectionHelper.getConnection();
		String cmd = "select count(*) from pincoderegisterusingemailorpincodeorusername where userName = ? and pinCode = ?";
		pst = connection.prepareStatement(cmd);
		pst.setString(1, userName);
		pst.setInt(2, pinCode);
		ResultSet res = pst.executeQuery();
		res.next();
		int count = res.getInt("cnt");
		return count;
	}
	
	
	public String RegisterUsingPinCode(Register register) throws ClassNotFoundException, SQLException {
		connection = ConnectionHelper.getConnection();
		String cmd = "insert into pincoderegisterusingemailorpincodeorusername(userName , pinCode)"+
				" values (?,?)";
		pst = connection.prepareStatement(cmd);
		pst.setString(1,register.getUserName());
		pst.setInt(2, register.getPinCode());
		pst.executeUpdate();
		return "Register SuccessFully";
	}

}


